<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>icms_servlet.SessionsServlet</servlet-class>
        <init-param>
            <param-name>action</param-name>
            <param-value>2</param-value>
        </init-param>
        </servlet>
    <servlet>
        <servlet-name>/articles</servlet-name>
        <servlet-class>icms_servlet.ArticlesServlet</servlet-class>
        <init-param>
            <param-name>action</param-name>
            <param-value>1</param-value>
        </init-param>
        </servlet>
    <servlet>
        <servlet-name>/admin/articles</servlet-name>
        <servlet-class>icms_servlet.admin.ArticlesServlet</servlet-class>
        </servlet>
    <servlet>
        <servlet-name>/article/permalink</servlet-name>
        <servlet-class>icms_servlet.ArticlesServlet</servlet-class>
        <init-param>
            <param-name>action</param-name>
            <param-value>4</param-value>
        </init-param>
        </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>icms_servlet.SessionsServlet</servlet-class>
        <init-param>
            <param-name>action</param-name>
            <param-value>7</param-value>
        </init-param>
        </servlet>
    <servlet>
        <servlet-name>admin</servlet-name>
        <servlet-class>icms_servlet.ArticlesServlet</servlet-class>
        <init-param>
            <param-name>action</param-name>
            <param-value>2</param-value>
        </init-param>
        </servlet>
    <servlet>
        <servlet-name>/admin/users</servlet-name>
        <servlet-class>icms_servlet.admin.UsersServlet</servlet-class>
        <init-param>
            <param-name>action</param-name>
            <param-value>1</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>ArticlesServlet</servlet-name>
        <servlet-class>icms_servlet.admin.ArticlesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>/articles</servlet-name>
        <url-pattern>/articles</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>/article/permalink</servlet-name>
        <url-pattern>/article/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>admin</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>/admin/users</servlet-name>
        <url-pattern>/admin/users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>/admin/articles</servlet-name>
        <url-pattern>/admin/articles</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ArticlesServlet</servlet-name>
        <url-pattern>/ArticlesServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>articles</welcome-file>
        </welcome-file-list>
    </web-app>
