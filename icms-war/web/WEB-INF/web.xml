<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>/login</servlet-name>
        <servlet-class>icms_servlet.SessionsServlet</servlet-class>
        <init-param>
            <param-name>action</param-name>
            <param-value>2</param-value>
        </init-param>
        </servlet>
    <servlet>
        <servlet-name>/articles</servlet-name>
        <servlet-class>icms_servlet.PagesServlet</servlet-class>
        <init-param>
            <param-name>action</param-name>
            <param-value>1</param-value>
        </init-param>
        </servlet>
    <servlet>
        <servlet-name>/admin/articles</servlet-name>
        <servlet-class>icms_servlet.admin.PagesServlet</servlet-class>
        </servlet>
    <servlet>
        <servlet-name>/article/permalink</servlet-name>
        <servlet-class>icms_servlet.PagesServlet</servlet-class>
        <init-param>
            <param-name>action</param-name>
            <param-value>4</param-value>
        </init-param>
        </servlet>
    <servlet>
        <servlet-name>/logout</servlet-name>
        <servlet-class>icms_servlet.SessionsServlet</servlet-class>
        <init-param>
            <param-name>action</param-name>
            <param-value>7</param-value>
        </init-param>
        </servlet>
    <servlet>
        <servlet-name>/admin</servlet-name>
        <servlet-class>icms_servlet.PagesServlet</servlet-class>
        <init-param>
            <param-name>action</param-name>
            <param-value>2</param-value>
        </init-param>
        </servlet>
    <servlet>
        <servlet-name>/admin/users</servlet-name>
        <servlet-class>icms_servlet.admin.UsersServlet</servlet-class>
        <init-param>
            <param-name>action</param-name>
            <param-value>1</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>/error_404</servlet-name>
        <jsp-file>/error_404.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>/admin/advertisements</servlet-name>
        <servlet-class>icms_servlet.admin.AdvertisementServlet</servlet-class>
        <init-param>
            <param-name>action</param-name>
            <param-value>1</param-value>
        </init-param>
        </servlet>
    <servlet>
        <servlet-name>/session/reset</servlet-name>
        <servlet-class>icms_servlet.SessionsServlet</servlet-class>
        <init-param>
            <param-name>action</param-name>
            <param-value>7</param-value>
        </init-param>
        </servlet>
    <servlet>
        <servlet-name>BaseServlet</servlet-name>
        <servlet-class>icms_servlet.BaseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>/login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>/articles</servlet-name>
        <url-pattern>/articles</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>/article/permalink</servlet-name>
        <url-pattern>/article/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>/logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>/admin</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>/admin/users</servlet-name>
        <url-pattern>/admin/users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>/admin/articles</servlet-name>
        <url-pattern>/admin/articles</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>/error_404</servlet-name>
        <url-pattern>/error_404</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>/admin/advertisements</servlet-name>
        <url-pattern>/admin/advertisements</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>/session/reset</servlet-name>
        <url-pattern>/session/reset</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BaseServlet</servlet-name>
        <url-pattern>/BaseServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>articles</welcome-file>
        </welcome-file-list>
    <jsp-config>
        </jsp-config>
        <context-param>
  <param-name>PARAMETER_ENCODING</param-name>
  <param-value>UTF-8</param-value>
</context-param>
    </web-app>
